#include "*/*.proj"

PROJECT matroska2
{
  PROJECT_NAME  "libmatroska2"
  PROJECT_VERSION  0.9.10
  PROJECT_VENDOR   "Matroska Foundation"
}

GROUP matroska2_group
{
  USE(HAVE_EBML2) ebml2
  EXPDEFINE HAVE_MATROSKA2
  USE(CONFIG_CODEC_HELPER) tremor

  INCLUDE .
  EXPINCLUDE .
  
  SOURCE matroskamain.c {class Matroska_Class}
  SOURCE matroskablock.c
  HEADER matroska/matroska.h
  HEADER matroska_internal.h
}

DLL matroska2
{
  USE matroska2_group
}
